package controller;

import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.Socket;

public class UserThread implements Runnable {

	private Socket socket;
	private Server_Thread server_Thread;
	private ObjectInputStream inputFromClient;
	private ObjectOutputStream outputToClient;
	private Object object;
	
	public UserThread(Socket socket, Server_Thread server_Thread) {
		this.socket = socket;
		this.server_Thread = server_Thread;
	}

	@Override
	public void run() {
		while(true) {
			inputFromClient = new ObjectInputStream(socket.getInputStream());
			outputToClient = new ObjectOutputStream(socket.getOutputStream());
			object = inputFromClient.readObject();
			serverDataController.directInformationRequest(view, object, outputToClient, socket);
		}
	}

}
